{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "indent": [2, 4],
    "quotes": "off",
    "linebreak-style": ["error", "windows"],
    "max-len": ["error", {"code": 120}],
    "require-jsdoc": 0,
    "comma-dangle": "warn",
    "no-unused-vars": ["error", {"vars": "local", "args": "none"}],
    "no-console": "off"
  }
}